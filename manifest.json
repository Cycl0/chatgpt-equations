{
  "manifest_version": 3,
  "name": "ChatGPT Beautiful Equations",
  "description": "Display equations in ChatGPT",
  "version": "1.0",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    },
    "permissions": ["activeTab", "storage", "tabs"]
  },
  "content_scripts": [
    {
      "js": ["scripts/mathjax.js", "scripts/content.js"],
      "matches": [
        "https://chat.openai.com/*",
        "https://developer.chrome.com/*"
      ],
      "run_at": "document_end"
    }
  ]
}
